{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ "dvd.edit" | trans }}</h1>

    <form action="{{ path('dvd_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn">{{ "edit" | trans }}<i class="icon-pencil"></i></button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('dvd') }}">
            {{ "back.list" | trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('dvd_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "delete" | trans }}</button>
        </form>
    </li>
</ul>
{% endblock %}

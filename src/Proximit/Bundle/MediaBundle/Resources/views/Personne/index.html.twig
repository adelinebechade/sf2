{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ "personne.list" | trans }}</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>{{ "id" | trans }}</th>
                <th>{{ "personne.name" | trans }}</th>
                <th>{{ "personne.first.name" | trans }}</th>
                <th>{{ "personne.nationality" | trans }}</th>
                <th>{{ "personne.date.birth" | trans }}</th>
                <th>{{ "personne.place.birth" | trans }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personne_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.nationalite }}</td>
                <td>{% if entity.dateDeNaissance %}{{ entity.dateDeNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.lieuDeNaissance }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('personne_show', { 'id': entity.id }) }}">{{ "show" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('personne_edit', { 'id': entity.id }) }}">{{ "edit" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('personne_list_dvd', { 'id': entity.id }) }}">{{ "dvd.list" | trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('personne_new') }}">
                {{ "create.entry" | trans }}
            </a>
        </li>
    </ul>
    {% endblock %}
